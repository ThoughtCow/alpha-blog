<h1>Edit Article</h1>
<% if @article.errors.any? %>
<p style="color: red">Your article couldn't save because of the following errors:</p>
  <ul style="color: red">
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
      <%= f.text_area :description %>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>
