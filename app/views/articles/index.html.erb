<% @head = "Articles - " %>
<div class="topnav">
  <a class="active" href="https://maya-dog-walking.herokuapp.com/">Home</a>
  <a href="https://maya-dog-walking.herokuapp.com/availablity">Availablity</a>
  <a href="https://maya-dog-walking.herokuapp.com/details">Details</a>
  <a href="https://maya-dog-walking.herokuapp.com/articles">Articles</a>
</div>
<h1>All articles</h1>
<%= link_to "Create a new article", new_article_path %>
<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Created at</th>
      <th colspan='2'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td style="padding: 10px"><%= link_to article.title, article_path(article) %></td>
      <td style="padding: 10px"><%= article.created_at %></td>
      <td style="padding: 10px"><p><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %></p></td>
      <td style="padding: 10px"><p><%= link_to 'Edit', edit_article_path(article) %></p></td>
    </tr>
    <% end %>
  </tbody>
</table>
